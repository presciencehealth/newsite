<%= content_for :html_title, @post.seo_title %>
<%= content_for :meta_description, @post.meta_description %>
<div class="offset-md-2 col-md-8 col-12 py-6">
  <!-- Post title -->
  <h3 class="font-weight-bold text-justify"><%= @post.title %></h3>
  <!-- Post author and date -->
  <p>Published by <%= link_to "#{@post.author.first_name} #{@post.author.last_name}", buttercms_author_path(@post.author.slug) %> on <%= Time.parse(@post.published).strftime('%B %d, %Y') %></p>
  <!-- Post body -->
  <%= @post.body.html_safe %>
  <!-- Link to Next Post -->
  <% if @next_post %>
    Next post: <%= link_to @next_post.title, buttercms_post_path(@next_post.slug), :title => @next_post.title %>
  <% end %>
</div>
