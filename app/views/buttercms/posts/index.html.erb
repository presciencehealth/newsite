<div class="col-md-12 col-12 py-6">
  <!-- List of posts -->
  <div class="card-deck">
    <% @posts.each do |post| %>
      <%= render :partial => 'post', :locals => {:post => post} %>
    <% end %>
  </div>
  <!-- Pagination links -->
  <div>
    <% if @previous_page %>
      <%= link_to "Prev", buttercms_blog_path(:page => @previous_page) %>
    <% end %>
  
    <% if @next_page %>
      <%= link_to "Next", buttercms_blog_path(:page => @next_page) %>
    <% end %>
  </div>
</div>